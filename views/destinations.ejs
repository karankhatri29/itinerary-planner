<!-- views/destinations.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Destinations - Tamil Nadu Itinerary Planner</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Popular Destinations in Tamil Nadu</h1>
        
        <div class="row mb-4">
            <div class="col-md-6 offset-md-3">
                <div class="input-group">
                    <input type="text" class="form-control" id="destinationSearch" placeholder="Search destinations...">
                    <button class="btn btn-primary" type="button">Search</button>
                </div>
            </div>
        </div>
        
        <div class="row" id="destinationsList">
            <% destinations.forEach(destination => { %>
                <div class="col-md-4 mb-4 destination-card" 
                     data-categories="<%= destination.categories.join(' ') %>">
                    <div class="card h-100 shadow-sm">
                        <div class="card-img-container">
                            <img src="<%= destination.imageUrl %>" class="card-img-top" alt="<%= destination.name %>">
                            <div class="location-badge">
                                <span class="badge bg-primary"><%= destination.name %></span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= destination.name %></h5>
                            <p class="card-text"><%= destination.description %></p>
                            <div class="mb-2">
                                <% destination.categories.forEach(category => { %>
                                    <span class="badge bg-secondary me-1"><%= category %></span>
                                <% }); %>
                            </div>
                            <div class="mt-2">
                                <strong>Known For:</strong>
                                <ul class="list-unstyled">
                                    <% destination.knownFor.slice(0, 3).forEach(item => { %>
                                        <li><i class="bi bi-check-circle-fill text-success me-2"></i><%= item %></li>
                                    <% }); %>
                                </ul>
                            </div>
                        </div>
                        <div class="card-footer bg-white">
                            <a href="/destinations/<%= destination.id %>" class="btn btn-outline-primary w-100">Explore</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <div class="row my-4">
            <div class="col-12">
                <h3>Filter by Experience</h3>
                <div class="category-filters d-flex flex-wrap">
                    <button class="btn btn-outline-primary m-1 category-filter" data-category="all">All</button>
                    <button class="btn btn-outline-primary m-1 category-filter" data-category="adventure">Adventure</button>
                    <button class="btn btn-outline-primary m-1 category-filter" data-category="cultural">Cultural</button>
                    <button class="btn btn-outline-primary m-1 category-filter" data-category="heritage">Heritage</button>
                    <button class="btn btn-outline-primary m-1 category-filter" data-category="food">Food</button>
                    <button class="btn btn-outline-primary m-1 category-filter" data-category="relaxation">Relaxation</button>
                    <button class="btn btn-outline-primary m-1 category-filter" data-category="luxury">Luxury</button>
                    <button class="btn btn-outline-primary m-1 category-filter" data-category="nature">Nature</button>
                    <button class="btn btn-outline-primary m-1 category-filter" data-category="beach">Beach</button>
                    <button class="btn btn-outline-primary m-1 category-filter" data-category="spiritual">Spiritual</button>
                </div>
            </div>
        </div>
        
        <div class="row mb-5">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Plan Your Trip to Tamil Nadu</h4>
                    </div>
                    <div class="card-body">
                        <p>Ready to explore the wonders of Tamil Nadu? Create a personalized itinerary that fits your interests and budget.</p>
                        <a href="/" class="btn btn-primary">Create Itinerary</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/destination-filters.js"></script>
</body>
</html>